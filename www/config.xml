<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.airgames.PhoneGapTest"
        version   = "0.0.1">
    <name>Air Games Beta</name>#

    <description>
      A Beta Version of Air Games running navtively on devices.
    </description>

    <author href="http://airg.com" email="patrickl@airg.com">
        Patrick Lawrence
